{
    "name": "The nameless Argentinian",
    "version": "0.1.0",
    "description": "Convert Argentinian money to SA money",
    "permissions": ["tabs","activeTab"],
    "host_permissions": ["https://*.steampowered.com/*"], 
    "content_scripts": [
      {
        "matches": ["https://*.steampowered.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/ext-icon.png",
        "24": "assets/ext-icon.png",
        "32": "assets/ext-icon.png"
      },
      "default_title": "The nameless Argentinian",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}
